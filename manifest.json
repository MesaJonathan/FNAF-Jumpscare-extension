{
  "manifest_version": 3,
  "name": "FNAF Jump Scare",
  "version": "1.0.0",
  "description": "Random FNAF jumpscares while browsing",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FNAF Jump Scare"
  },
  "web_accessible_resources": [
    {
      "resources": ["videos/*.mp4"],
      "matches": ["<all_urls>"]
    }
  ]
}